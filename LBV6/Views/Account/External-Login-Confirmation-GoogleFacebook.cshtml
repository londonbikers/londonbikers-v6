@model LBV6.Models.ExternalLoginConfirmationViewModel
@{
    ViewBag.Title = "Register";
    ViewBag.ShowAuthControls = false;
}

<div class="center-column">
    <div class="content-frame mt20">
        <h2>@ViewBag.Title</h2>

        @using (Html.BeginForm("external-login-confirmation", "account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <div class="text-center medium-2 mb20">
                Great, we've got your details, now just choose a username!
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                    <div class="mt10">
                        <i>Your username is how you will be known to everyone, i.e. "R1Fan"</i>
                    </div>
                    <div class="alert alert-warning mt10" role="alert">
                        Keep it safe, keep it secret - we recommend you <b>don't</b> use your real name
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-danger btn-lg" value="Register" />
                    @Html.ValidationSummary("", new { @class = "text-danger mt20" })
                </div>
            </div>
        }

    </div>
</div>