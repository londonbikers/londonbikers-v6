<script type="text/html" id="forum-topic-headers-phone">
    <table class="table" id="headers">
        <tbody data-bind="foreach: Topics">
            <tr>
                <td data-bind="css: { 'fade-70pc': IsNew() === false && HasNewReplies() === false }" class="p15">

                    <span data-bind="html: window.GetTopicIconsHtml($data)"></span>
                    <span data-bind="html: window.GetTopicAdditionalIconsHtml($data), css: { light: !IsNew(), lowlight: IsNew() }"></span>
                    <span class="topic-name topic-name-mobile">
                        <a data-bind="attr: { href: GetUrl }, css: { 'topic-name-read': IsNew() === false, 'topic-name-has-updates': HasNewReplies() === true }, text: Subject"></a>
                    </span>

                    <div class="mt5">
                        <!-- ko foreach: ProminentUsers -->
                        <a data-bind="attr: { href: window.GetUserProfileUrl($data.UserName), title: $data.UserName + ' - ' + $data.Reason }, html: window.GetUserProfileGraphic('small', $data.UserName, $data.ProfileFileStoreId)"></a>
                        <!-- /ko -->
                        <span data-bind="text: GetShortFriendlyUpdated" class="light ml5"></span>
                    </div>

                </td>
            </tr>
        </tbody>
    </table>
</script>